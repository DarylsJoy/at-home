.personal {
  height: 100vh;
  font-size: 32rpx;
}
.container {
  display: block;
}
.section {
  width: 100%;
  padding: 26rpx 22rpx 0rpx 22rpx;
}

/**banner**/
.banner-img {
  width: 100%;
  height: 360rpx;
}

/**content**/
.order-row {
  padding: 0 26rpx;
  background-color: #fff;
}
.order-row-inner {
  display: flex;
  padding: 30rpx 50rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.row-inner {
  flex: 1;
}
.contact-service {
  display: flex;
  padding: 30rpx 0;
}

.person-info {
  display: flex;
  align-items: center;
  padding: 26rpx;
  background-color: #fff;
}
.person-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.person-name {
  padding-left: 26rpx;
}