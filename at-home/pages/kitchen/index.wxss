.kitchen {
  display: block;
  height: 100vh;
  font-size: 32rpx;
}
.section {
  width: 100%;
  padding: 26rpx 22rpx 36rpx 22rpx;
}

/** 弹层 **/
.show-popup {
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents {
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.pick-number {
   display: flex;
   justify-content: space-between;
   align-items: center;
   padding: 30rpx;
}
.pick-number-label{
  font-size: 26rpx;
  color: #000000;
}
.pick-number-container {
  display: flex;
}
.pick-decrease, .pick-input, .pick-increase {
  width: 80rpx;
  height: 64rpx;
  line-height: 56rpx;
  text-align: center;
  border: 1px solid #eee;
}
.pick-input {
  font-size: 28rpx;
}
.pick-input input{
  height: 100%;
}
.popup-submit-btn {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: #ffffff;
  background-color: #e64340;
}
.disabled-btn {
  background-color: #f5f5f9;
}